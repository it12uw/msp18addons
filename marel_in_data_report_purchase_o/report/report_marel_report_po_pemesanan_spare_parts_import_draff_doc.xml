			<div class="page oe_purchase_font_title">
				<div class="oe_structure" />
				<table class="table table-condensed">
					<thead>
						<tr>
							<th>
								Document ID
							</th>
							<th>
								Page
							</th>
							<th>
								Revision No
							</th>
							<th>
								Revision Date
							</th>
							<th>
								Effective Date
							</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>MSP/F/P/PCH/02.01</td>
							<td>Page 1 of 1</td>
							<td>-</td>
							<td>-</td>
							<td>02 JANUARI 2019</td>
						</tr>
					</tbody>
				</table>
