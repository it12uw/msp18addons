<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_mesin_produksi_marel_tree" model="ir.ui.view">
            <field name="name">mesin.marel.produksi.tree</field>
            <field name="model">mesin.marel.produksi</field>
            <field name="type">list</field>
            <!-- <field name="priority" eval="8"/> -->
            <field name="arch" type="xml">
                <list string="Data Mesin Produksi">
                    <field name="nama_mesin_blok"/>
                    <field name="no_serial_number"/>
                    <field name="tahun" />
                    <field name="type_mesin"/>
                    <field name="merk"/>
                </list>
            </field>
        </record>
        <record id="view_mesin_produksi_marel_form" model="ir.ui.view">
            <field name="name">mesin.marel.produksi.form</field>
            <field name="model">mesin.marel.produksi</field>
            <field name="type">form</field>
            <!-- <field name="priority" eval="8"/> -->
            <field name="arch" type="xml">
                <form string="Data Mesin Produksi">
                    <sheet>
                        <group>
                            <field name="nama_mesin_blok"/>
                            <field name="no_serial_number"/>
                        </group>
                        <group>    
                            <field name="tahun"/>
                            <field name="jml_jarum"/>
                        </group>
                        <group>
                            <field name="type_mesin"/>
                            <field name="merk"/>
                        </group>
                       <group>
                            <field name="needls"/>
                            <field name="gauge"/>
                            <field name="diameter"/>
                       </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
